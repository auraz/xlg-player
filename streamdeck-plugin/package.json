{
  "name": "xlg-player-streamdeck",
  "version": "1.0.0",
  "description": "Stream Deck plugin for XLG Apple Music player",
  "main": "com.xlg.player.sdPlugin/bin/plugin.js",
  "scripts": {
    "build": "esbuild src/plugin.ts --bundle --platform=node --outfile=com.xlg.player.sdPlugin/bin/plugin.js",
    "watch": "esbuild src/plugin.ts --bundle --platform=node --outfile=com.xlg.player.sdPlugin/bin/plugin.js --watch",
    "install-plugin": "ln -sf \"$(pwd)/com.xlg.player.sdPlugin\" \"$HOME/Library/Application Support/com.elgato.StreamDeck/Plugins/\""
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.19.0"
  }
}
